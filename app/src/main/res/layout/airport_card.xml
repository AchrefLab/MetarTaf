<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardbg"
                android:padding="5dp">
                <!--airportname-->
                <TextView
                    android:id="@+id/airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5sp">
                </TextView>
                <!--temperature-->
                <TextView
                    android:id="@+id/flightrules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5sp">
                </TextView>
                <!--airport icao-->
                <TextView
                    android:id="@+id/icao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/flightrules"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="5sp">
                </TextView>

                <!--wind direction icon-->
                <ImageView
                    android:id="@+id/winddirectionicon"
                    android:layout_below="@+id/airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:rotation="320"
                    android:src="@drawable/ic_wind_direction"/>
                <!--wind direction-->
                <TextView
                    android:id="@+id/windDirection"
                    android:layout_below="@+id/airport"
                    android:layout_toEndOf="@id/winddirectionicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:paddingTop="5dp">
                </TextView>
                <ImageView
                    android:id="@+id/windspeedicon"
                    android:layout_below="@+id/airport"
                    android:layout_toEndOf="@id/windDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_wind_speed">
                </ImageView>
                <!--wind speed-->
                <TextView
                    android:id="@+id/windspeed"
                    android:layout_below="@+id/airport"
                    android:layout_toEndOf="@id/windspeedicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:paddingTop="5dp">
                </TextView>
                <!--Temperature-->
                <TextView
                    android:id="@+id/temperature"
                    android:layout_below="@+id/airport"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:paddingTop="5dp">
                </TextView>
                <!--Pressure-->
                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/airport"
                    android:layout_toStartOf="@id/temperature"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:paddingTop="5sp">
                </TextView>

                <!--Static text visibility-->
                <TextView
                    android:id="@+id/staticvisbilitytext"
                    android:layout_below="@+id/windDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textvisibilty"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp">
                </TextView>
                <TextView
                    android:id="@+id/visbility"
                    android:layout_below="@+id/windDirection"
                    android:layout_toEndOf="@id/staticvisbilitytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="8dp">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>